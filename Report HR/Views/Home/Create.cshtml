
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayOut.cshtml";
}

<!-- form start -->
@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row mb-3">
        <label for="Full Name" class="col-sm-2 col-form-label">Full Name</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="Full Name" name="Name">
        </div>
    </div>

    <div class="row mb-3">
        <label for="Adress" class="col-sm-2 col-form-label">Adress</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="Adress" name="Adress">
        </div>
    </div>

    <div class="row mb-3">
        <label for="Phone" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="Phone" name="Phone">
        </div>
    </div>

    <div class="row mb-3">
        <label for="Salary" class="col-sm-2 col-form-label">Salary</label>
        <div class="col-sm-5">
            <input type="number" step=0.01 class="form-control" id="salary" name="Salary">
        </div>
    </div>
    <div class="row mb-3">
        <label for="TFrom" class="col-sm-2 col-form-label">Attend Time</label>
        <div class="col-sm-5">
            <input type="time" required class="form-control" id="TFrom" name="TFrom">
        </div>
        
    </div>
    <div class="row mb-3">
        <label for="TTo" class="col-sm-2 col-form-label">Leave Time</label>
        <div class="col-sm-5">
            <input type="time" required class="form-control" id="TTo" name="TTo">
        </div>
    </div>

    <!-- /.card-body -->
    <div class="w-75 text-center mt-4">
        <button type="submit" class="btn btn-outline-primary">Create <small><em class="fa fa-plus"></em></small></button>
    </div>}
