
@{
    ViewBag.Title = "ReportSalary";
    Layout = "~/Views/Shared/_LayOut.cshtml";
}

<form action="/Home/AbsenceReportShow" method="get">
    
    <div class="row mb-3">
        <label for="DateFrom" class="col-sm-2 col-form-label">DateFrom</label>
        <div class="col-sm-6">
            <div class="row">
                <div class="col">
                    <input type="date" required class="form-control " id="DateFrom" name="DateFrom">
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <label for="DateTo" class="col-sm-2 col-form-label">DateTo</label>
        <div class="col-sm-6">
            <div class="row">
                <div class="col">
                    <input type="date" required class="form-control " id="TimeDateTo" name="DateTo">
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <label for="Name" class="col-sm-2 col-form-label">Employee</label>
        <div class="col-sm-6">
            <select class="form-control" required id="Name" name="EmployeeId">
                @foreach (var item in ViewBag.Employee)
                {
                    <option class="form-control" value="@item.id">@item.Name</option>
                }
            </select>
        </div>
    </div>

    <!-- /.card-body -->
    <div class="w-75 text-center mt-4">
        <button type="submit" class="btn btn-outline-dark">Get Result <small><em class="fa fa-plus"></em></small></button>
    </div>

</form>

